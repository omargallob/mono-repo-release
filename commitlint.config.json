{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "perf",
                "test",
                "build",
                "ci",
                "chore",
                "revert"
            ]
        ],
        "scope-enum": [
            2,
            "always",
            [
                "lib1",
                "lib2",
                "app",
                "build",
                "ci",
                "deps"
            ]
        ],
        "subject-max-length": [
            2,
            "always",
            72
        ],
        "body-max-line-length": [
            2,
            "always",
            100
        ]
    }
}